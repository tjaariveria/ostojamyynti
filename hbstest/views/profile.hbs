<div class="container">
    <div class="itemA">
    </div>
    <div class="itemA">
        <h4>Kirjautuneena: {{user.kayttaja_tunnus}}</h4>
        <a href="/editUser/{{user.kayttaja_id}}"><button class="button">Muokkaa</button></a>
    </div>
</div>

<div class="row">
    <div class="col-8">
        <div class="card-profile-text">
            <div class="card-profile-title">
                <h2 style="text-align: center;">Omat ilmoitukset</h2>
            </div>
            <div>
                {{#list}}
                <div class="ilmoitukset">
                    <div class="ilmoitus" key={{ilmoitus_id}}>
                        <div>
                            <h1>{{advertType ilmoitus_laji}}: {{ilmoitus_nimi}}</h1>
                            <h3>{{ilmoitus_kuvaus}}</h3>
                            <a href="/editAdvert/{{ilmoitus_id}}"><button class="button">Muokkaa</button></a>
                            <a href="/deleteAdvert/{{ilmoitus_id}}"><button class="button">Poista</button></a>
                        </div>
                    </div>
                </div>
                {{/list}}
            </div>
        </div>
    </div>
</div>